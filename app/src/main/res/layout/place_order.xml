<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#0A9067"
    >

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Full Address"
        android:id="@+id/orderfulladdress"
        android:padding="5dp"
        android:layout_below="@+id/map"
        android:layout_marginTop="10dp"
        android:textSize="23sp"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Colony Name"
        android:id="@+id/orderlocalityname"
        android:padding="5dp"
        android:layout_below="@+id/orderfulladdress"
        android:layout_marginTop="10dp"
        android:textSize="23sp"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Landmark"
        android:id="@+id/orderlandmark"
        android:padding="5dp"
        android:layout_below="@+id/orderlocalityname"
        android:layout_marginTop="10dp"
        android:textSize="23sp"
        />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/orderquantity"
        android:layout_below="@+id/orderlandmark"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15sp"
        android:textSize="23sp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Place Order"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="5dp"
        android:backgroundTint="#3C5286"
        />

</RelativeLayout>